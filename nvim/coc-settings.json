{
  "languageserver": {
    "c": {
      "command": "clangd",
      "filetypes": ["c", "cpp"]
    },
    "cpp": {
      "command": "clangd",
      "filetypes": ["c", "cpp"]
    },
    "csharp": {
      "command": "omnisharp",
      "filetypes": ["cs"]
    },
    "java": {
      "command": "java-language-server",
      "filetypes": ["java"]
    },
    "javascript": {
      "command": "tsserver",
      "filetypes": ["javascript", "javascriptreact"]
    },
    "shellscript": {
      "command": "bash-language-server",
      "filetypes": ["sh"]
    },
    "python": {
      "command": "pyright",
      "filetypes": ["python"]
    },
    "css": {
      "command": "tsserver",
      "filetypes": ["css"]
    },
    "html": {
      "command": "tsserver",
      "filetypes": ["html"]
    },
    "rust": {
      "command": "rls",
      "filetypes": ["rust"]
    }
  },
  "coc.preferences.formatOnSaveFiletypes": ["c", "cpp", "cs", "java", "javascript", "sh", "python", "css", "html", "rust"],
  "coc.preferences.formatOnTypeFiletypes": ["c", "cpp", "cs", "java", "javascript", "sh", "python", "css", "html", "rust"],
  "coc.preferences.snippetSuggestions": "textmate",
  "coc.preferences.suggest.noselect": false,
  "coc.preferences.suggest.previewMaxHeight": 12,
  "coc.preferences.suggest.triggerAfterInsertEnter": true,
  "coc.preferences.suggest.triggerAfterInsertLeave": true
}
